---
const today = new Date();
---

<footer class="main-footer">
	<div class="container">
		<div class="footer-grid">
			<div class="footer-brand">
				<a href="/" class="footer-logo">
					<svg width="32" height="32" viewBox="0 0 40 40" fill="none">
						<path d="M20 4L4 12L20 20L36 12L20 4Z" fill="currentColor"/>
						<path d="M4 20L20 28L36 20" stroke="currentColor" stroke-width="2"/>
						<path d="M4 28L20 36L36 28" stroke="currentColor" stroke-width="2"/>
					</svg>
					<span>NirogYatra</span>
				</a>
				<p>Empowering your digital transformation journey with expert insights and innovative solutions.</p>
			</div>
			
			<div class="footer-links">
				<h3>Navigation</h3>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/blog">Blog</a></li>
					<li><a href="/about">About</a></li>
				</ul>
			</div>
		
			
			<div class="footer-newsletter">
				<h3>Stay Updated</h3>
				<p>Subscribe to our newsletter for the latest insights.</p>
				<form class="newsletter-form">
					<input type="email" placeholder="Enter your email" aria-label="Email for newsletter" />
					<button type="submit" class="btn btn-primary">Subscribe</button>
				</form>
			</div>
		</div>
		
		<div class="footer-bottom">
			<div class="copyright">
				&copy; {today.getFullYear()} NirogYatra. All rights reserved.
			</div>
			<div class="social-links">
				<a href="#" aria-label="Twitter">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
					</svg>
				</a>
				<a href="#" aria-label="GitHub">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
					</svg>
				</a>
				<a href="#" aria-label="LinkedIn">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
						<rect x="2" y="9" width="4" height="12"/>
						<circle cx="4" cy="4" r="2"/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.main-footer {
		background: var(--card-bg);
		padding: 4rem 0 2rem;
		border-top: 1px solid var(--border);
		margin-top: 4rem;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 3fr repeat(3, 1fr);
		gap: 4rem;
		margin-bottom: 3rem;
	}

	.footer-brand {
		max-width: 300px;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
		color: var(--text);
		font-weight: 700;
		font-size: 1.25rem;
	}

	.footer-brand p {
		color: var(--text-muted);
		font-size: 0.95rem;
		line-height: 1.6;
	}

	.footer-links h3 {
		font-size: 1.1rem;
		margin-bottom: 1rem;
	}

	.footer-links ul {
		list-style: none;
		padding: 0;
	}

	.footer-links li {
		margin-bottom: 0.5rem;
	}

	.footer-links a {
		color: var(--text-muted);
		transition: var(--transition);
		font-size: 0.95rem;
	}

	.footer-links a:hover {
		color: var(--primary);
	}

	.footer-newsletter h3 {
		font-size: 1.1rem;
		margin-bottom: 1rem;
	}

	.footer-newsletter p {
		color: var(--text-muted);
		margin-bottom: 1rem;
		font-size: 0.95rem;
	}

	.newsletter-form {
		display: flex;
		gap: 0.5rem;
	}

	.newsletter-form input {
		flex: 1;
		padding: 0.5rem 1rem;
		border: 1px solid var(--border);
		border-radius: var(--radius);
		background: var(--bg);
		color: var(--text);
	}

	.newsletter-form input:focus {
		outline: none;
		border-color: var(--primary);
	}

	.newsletter-form button {
		padding: 0.5rem 1rem;
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 2rem;
		border-top: 1px solid var(--border);
	}

	copyright {
		color: var(--text-muted);
		font-size: 0.9rem;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		color: var(--text-muted);
		transition: var(--transition);
	}

	.social-links a:hover {
		color: var(--primary);
	}

	@media (max-width: 1024px) {
		.footer-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 2rem;
		}
	}

	@media (max-width: 640px) {
		.footer-grid {
			grid-template-columns: 1fr;
		}

		.footer-bottom {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}
	}
</style>

<script>
	const form = document.querySelector('.newsletter-form');
	form?.addEventListener('submit', (e) => {
		e.preventDefault();
		const email = (form.querySelector('input') as HTMLInputElement).value;
		console.log('Newsletter subscription:', email);
		form.reset();
		alert('Thank you for subscribing!');
	});
</script>
