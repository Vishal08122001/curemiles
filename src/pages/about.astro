---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title="About NirogYatra - Digital Transformation Experts"
			description="Learn about NirogYatra and our mission to help businesses thrive in the digital age through expert insights and innovative solutions."
		/>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<div class="container">
					<h1>About NirogYatra</h1>
					<p class="subtitle">Empowering Digital Growth</p>
				</div>
			</div>

			<div class="container content-wrapper">
				<section class="about-section">
					<h2>Our Mission</h2>
					<p>At NirogYatra, we're passionate about helping businesses navigate and thrive in the digital landscape. Our mission is to provide expert insights, practical strategies, and innovative solutions that drive sustainable growth and digital transformation.</p>
				</section>

				<section class="about-section">
					<h2>What We Do</h2>
					<div class="services-grid">
						<div class="service-card">
							<div class="icon">ðŸ“Š</div>
							<h3>Digital Strategy</h3>
							<p>Comprehensive digital transformation strategies tailored to your business goals.</p>
						</div>
						<div class="service-card">
							<div class="icon">ðŸ’¡</div>
							<h3>Expert Insights</h3>
							<p>In-depth analysis and actionable insights from industry experts.</p>
						</div>
						<div class="service-card">
							<div class="icon">ðŸŽ¯</div>
							<h3>Growth Solutions</h3>
							<p>Data-driven approaches to accelerate your business growth.</p>
						</div>
						<div class="service-card">
							<div class="icon">ðŸ”„</div>
							<h3>Innovation</h3>
							<p>Stay ahead with the latest digital trends and technologies.</p>
						</div>
					</div>
				</section>

				<section class="about-section">
					<h2>Our Team</h2>
					<div class="team-grid">
						<div class="team-card">
							<div class="team-image">
								<img src="/blog-placeholder-about.jpg" alt="Sarah Johnson - Digital Strategy Lead" />
							</div>
							<h3>Sarah Johnson</h3>
							<p class="role">Digital Strategy Lead</p>
							<p class="bio">10+ years experience in digital transformation and business strategy.</p>
						</div>
						<div class="team-card">
							<div class="team-image">
								<img src="/blog-placeholder-1.jpg" alt="Michael Chen - Technical Expert" />
							</div>
							<h3>Michael Chen</h3>
							<p class="role">Technical Expert</p>
							<p class="bio">Specialized in emerging technologies and digital innovation.</p>
						</div>
						<div class="team-card">
							<div class="team-image">
								<img src="/blog-placeholder-2.jpg" alt="Emma Rodriguez - Content Strategist" />
							</div>
							<h3>Emma Rodriguez</h3>
							<p class="role">Content Strategist</p>
							<p class="bio">Expert in content strategy and digital marketing.</p>
						</div>
					</div>
				</section>

				<section class="about-section contact-section">
					<h2>Get in Touch</h2>
					<p>Interested in learning more about how we can help your business? Contact us today.</p>
					<div class="cta-buttons">
						<a href="mailto:contact@nirogyatra.com" class="btn btn-primary">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
								<polyline points="22,6 12,13 2,6"></polyline>
							</svg>
							Contact Us
						</a>
						<a href="/blog" class="btn btn-outline">
							Read Our Blog
						</a>
					</div>
				</section>
			</div>
		</main>
		<Footer />

		<style>
			.hero {
				background: linear-gradient(to right, var(--bg), var(--card-bg));
				padding: 4rem 0;
				text-align: center;
				border-bottom: 1px solid var(--border);
			}

			.hero h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
				background: linear-gradient(135deg, var(--text) 0%, var(--primary) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}

			.subtitle {
				color: var(--text-muted);
				font-size: 1.25rem;
				margin: 0;
			}

			.content-wrapper {
				max-width: 1000px;
				margin: 0 auto;
				padding: 4rem 1.5rem;
			}

			.about-section {
				margin-bottom: 4rem;
			}

			.about-section h2 {
				font-size: 2rem;
				margin-bottom: 1.5rem;
				color: var(--text);
			}

			.about-section p {
				color: var(--text-muted);
				font-size: 1.1rem;
				line-height: 1.8;
			}

			.services-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}

			.service-card {
				background: var(--card-bg);
				padding: 2rem;
				border-radius: var(--radius);
				border: 1px solid var(--border);
				transition: var(--transition);
			}

			.service-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow);
			}

			.service-card .icon {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}

			.service-card h3 {
				margin-bottom: 1rem;
				color: var(--text);
			}

			.service-card p {
				font-size: 1rem;
				margin: 0;
			}

			.team-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}

			.team-card {
				background: var(--card-bg);
				border-radius: var(--radius);
				overflow: hidden;
				border: 1px solid var(--border);
				transition: var(--transition);
			}

			.team-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--shadow);
			}

			.team-image {
				width: 100%;
				height: 280px;
				overflow: hidden;
			}

			.team-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: var(--transition);
			}

			.team-card:hover .team-image img {
				transform: scale(1.05);
			}

			.team-card h3 {
				margin: 1rem;
				color: var(--text);
			}

			.team-card .role {
				color: var(--primary);
				font-weight: 600;
				margin: 0 1rem;
			}

			.team-card .bio {
				margin: 1rem;
				font-size: 0.95rem;
			}

			.contact-section {
				text-align: center;
				margin-top: 6rem;
				padding: 3rem;
				background: var(--card-bg);
				border-radius: var(--radius);
				border: 1px solid var(--border);
			}

			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				margin-top: 2rem;
			}

			.btn {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.75rem 1.5rem;
				border-radius: var(--radius);
				font-weight: 600;
				transition: var(--transition);
			}

			.btn svg {
				transition: transform 0.2s ease;
			}

			.btn:hover svg {
				transform: translateX(3px);
			}

			.btn-primary {
				background: var(--primary);
				color: white;
			}

			.btn-primary:hover {
				background: var(--accent);
			}

			.btn-outline {
				border: 2px solid var(--border);
				color: var(--text);
			}

			.btn-outline:hover {
				border-color: var(--primary);
				color: var(--primary);
			}

			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}

				.content-wrapper {
					padding: 2rem 1rem;
				}

				.team-image {
					height: 220px;
				}

				.cta-buttons {
					flex-direction: column;
				}

				.btn {
					width: 100%;
					justify-content: center;
				}
			}

			@media (prefers-reduced-motion: reduce) {
				.team-image img,
				.service-card,
				.team-card,
				.btn svg {
					transition: none;
				}
			}
		</style>
	</body>
</html>
