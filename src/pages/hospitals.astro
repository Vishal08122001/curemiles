---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdSense from '../components/AdSense.astro';
import TreatmentCostForm from '../components/TreatmentCostForm.astro';
import { SITE_TITLE } from '../consts';

const hospitals = [
    {
        id: 'apollo-hospitals',
        name: 'Apollo Hospitals',
        location: 'Chennai, India',
        accreditations: ['JCI', 'NABH', 'NABL'],
        specialties: ['Oncology', 'Cardiology', 'Orthopedics', 'Neurology'],
        rating: 4.8,
        reviews: 1250,
        image: '/images/hospitals/apollo.jpg',
        description: `Apollo Hospitals Chennai is a world-renowned multispecialty hospital providing advanced healthcare services. With state-of-the-art facilities and experienced medical professionals, it offers comprehensive treatment options for international patients.`,
        facilities: [
            'International Patient Services',
            '1000+ Beds',
            'ICU & Critical Care',
            'Robotic Surgery',
            '24/7 Emergency Services',
            'In-house Pharmacy',
            'Food & Dietary Services',
            'Translation Services'
        ],
        doctors: [
            {
                name: 'Dr. Prathap C Reddy',
                specialty: 'Cardiology',
                experience: '40+ years',
                image: '/images/doctors/dr-reddy.jpg'
            },
            {
                name: 'Dr. Anupama Rao',
                specialty: 'Oncology',
                experience: '25+ years',
                image: '/images/doctors/dr-rao.jpg'
            }
        ]
    },
    // Add more hospitals here
];

const hospitalSchema = {
    "@context": "https://schema.org",
    "@type": "Hospital",
    "name": "Top Hospitals in India for Medical Tourism",
    "description": "Leading hospitals in India offering world-class medical treatment for international patients",
    "medicalSpecialty": ["Oncology", "Cardiology", "Orthopedics", "Neurology"],
    "availableService": hospitals.map(hospital => ({
        "@type": "MedicalTherapy",
        "name": hospital.name,
        "description": hospital.description
    }))
};
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead 
            title="Best Hospitals in India for Medical Tourism | JCI Accredited"
            description="Discover top hospitals in India offering world-class medical treatment. JCI accredited facilities, experienced doctors & affordable healthcare packages."
            keywords="hospitals in India, medical tourism hospitals, JCI accredited hospitals, best hospitals India, international patient care"
        />
    <script type="application/ld+json" set:html={JSON.stringify(hospitalSchema)}/>

    </head>
    <body>
        <Header />
        <main>
            <section class="hero">
                <div class="container">
                    <h1>Leading Hospitals in India</h1>
                    <p class="subtitle">World-Class Healthcare at Affordable Costs</p>
                </div>
            </section>

            <AdSense adSlot="hospital-page-top" adFormat="fluid" />

            <section class="hospitals">
                <div class="container">
                    {hospitals.map(hospital => (
                        <article class="hospital-card">
                            <div class="hospital-header">
                                <img src={hospital.image} alt={hospital.name} class="hospital-image" />
                                <div class="hospital-info">
                                    <h2>{hospital.name}</h2>
                                    <p class="location">{hospital.location}</p>
                                    <div class="accreditations">
                                        {hospital.accreditations.map(acc => (
                                            <span class="badge">{acc}</span>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            <div class="hospital-body">
                                <p class="description">{hospital.description}</p>

                                <div class="specialties">
                                    <h3>Key Specialties</h3>
                                    <div class="specialty-tags">
                                        {hospital.specialties.map(specialty => (
                                            <span class="specialty-tag">{specialty}</span>
                                        ))}
                                    </div>
                                </div>

                                <div class="facilities">
                                    <h3>Facilities & Services</h3>
                                    <ul class="facility-list">
                                        {hospital.facilities.map(facility => (
                                            <li>{facility}</li>
                                        ))}
                                    </ul>
                                </div>

                                <div class="doctors">
                                    <h3>Key Doctors</h3>
                                    <div class="doctor-grid">
                                        {hospital.doctors.map(doctor => (
                                            <div class="doctor-card">
                                                <img src={doctor.image} alt={doctor.name} class="doctor-image" />
                                                <h4>{doctor.name}</h4>
                                                <p class="specialty">{doctor.specialty}</p>
                                                <p class="experience">{doctor.experience}</p>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            <div class="hospital-footer">
                                <div class="rating">
                                    <span class="stars">★★★★★</span>
                                    <span class="rating-text">{hospital.rating} ({hospital.reviews} reviews)</span>
                                </div>
                                <a href={`/hospitals/${hospital.id}`} class="cta-button">
                                    View Hospital Details
                                </a>
                            </div>
                        </article>
                    ))}
                </div>
            </section>

            <AdSense adSlot="hospital-page-bottom" adFormat="fluid" />            <TreatmentCostForm 
                formName="hospital-enquiry" 
                className="hospital-form"
                title="Get Free Hospital Consultation"
                description="Our medical experts will help you choose the right hospital for your treatment"
            />
        </main>
        <Footer />

        <style>
            .hero {
                background: linear-gradient(135deg, var(--primary), var(--accent));
                color: white;
                padding: 4rem 0;
                text-align: center;
                margin-bottom: 2rem;
            }

            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 1.5rem;
            }

            .hospital-card {
                background: var(--card-bg);
                border-radius: var(--radius);
                margin-bottom: 2rem;
                overflow: hidden;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }

            .hospital-header {
                display: flex;
                gap: 2rem;
                padding: 2rem;
                background: var(--bg);
            }

            .hospital-image {
                width: 200px;
                height: 150px;
                object-fit: cover;
                border-radius: var(--radius);
            }

            .hospital-info {
                flex: 1;
            }

            .accreditations {
                display: flex;
                gap: 0.5rem;
                margin-top: 1rem;
            }

            .badge {
                background: var(--primary);
                color: white;
                padding: 0.25rem 0.75rem;
                border-radius: 1rem;
                font-size: 0.875rem;
            }

            .hospital-body {
                padding: 2rem;
            }

            .specialty-tags {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                margin-top: 1rem;
            }

            .specialty-tag {
                background: var(--accent-light);
                color: var(--accent);
                padding: 0.25rem 0.75rem;
                border-radius: 1rem;
                font-size: 0.875rem;
            }

            .facility-list {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 1rem;
                margin-top: 1rem;
                list-style: none;
                padding: 0;
            }

            .facility-list li {
                padding-left: 1.5rem;
                position: relative;
            }

            .facility-list li:before {
                content: "✓";
                position: absolute;
                left: 0;
                color: var(--primary);
            }

            .doctor-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 2rem;
                margin-top: 1rem;
            }

            .doctor-card {
                text-align: center;
            }

            .doctor-image {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                margin-bottom: 1rem;
            }

            .hospital-footer {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 1.5rem 2rem;
                background: var(--bg);
                border-top: 1px solid var(--border);
            }

            .rating {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .stars {
                color: #FFB800;
            }

            .cta-button {
                display: inline-block;
                background: var(--primary);
                color: white;
                padding: 0.75rem 1.5rem;
                border-radius: var(--radius);
                text-decoration: none;
                transition: background 0.3s ease;
            }

            .cta-button:hover {
                background: var(--primary-dark);
            }

            .medical-lead-form {
                background: var(--card-bg);
                padding: 2rem;
                border-radius: var(--radius);
                max-width: 600px;
                margin: 4rem auto;
            }

            .form-group {
                margin-bottom: 1rem;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                width: 100%;
                padding: 0.75rem;
                border: 1px solid var(--border);
                border-radius: var(--radius);
                background: var(--bg);
                color: var(--text);
            }

            .form-group textarea {
                resize: vertical;
            }

            button[type="submit"] {
                width: 100%;
                background: var(--primary);
                color: white;
                border: none;
                padding: 1rem;
                border-radius: var(--radius);
                cursor: pointer;
                transition: background 0.3s ease;
            }

            button[type="submit"]:hover {
                background: var(--primary-dark);
            }

            @media (max-width: 768px) {
                .hospital-header {
                    flex-direction: column;
                }

                .hospital-image {
                    width: 100%;
                    height: 200px;
                }

                .hospital-footer {
                    flex-direction: column;
                    gap: 1rem;
                    text-align: center;
                }

                .facility-list {
                    grid-template-columns: 1fr;
                }

                .doctor-grid {
                    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
                }
            }
        </style>
    </body>
</html>
